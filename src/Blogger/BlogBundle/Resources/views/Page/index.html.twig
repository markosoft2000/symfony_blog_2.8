{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block body %}
    {% for post in posts %}
        <article class="post">
            <div class="date"><time datetime="{{ post.created|date('c') }}">{{ post.created|date('l, F j, Y') }}</time></div>
            <header>
                <h2><a href="{{ path('BloggerBlogBundle_post_show', { 'id': post.id }) }}">{{ post.title }}</a></h2>
            </header>

            <img src="{{ asset(['images/', post.image]|join) }}" />
            <div class="snippet">
                <p>{{ post.post(500) }}</p>
                <p class="continue"><a href="{{ path('BloggerBlogBundle_post_show', { 'id': post.id }) }}">Continue reading...</a></p>
            </div>

            <footer class="meta">
                <p>Comments: -</p>
                <p>Posted by <span class="highlight">{{post.author}}</span> at {{ post.created|date('h:iA') }}</p>
                <p>Tags: <span class="highlight">{{ post.tags }}</span></p>
            </footer>
        </article>
    {% else %}
        <p>There are no post entries for symblog</p>
    {% endfor %}
{% endblock %}